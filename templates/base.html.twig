<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>
      {% block title %}Openclass DUT{% endblock %}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- BLOC DES FEUILLES DE STYLE -->
    {% block stylesheets %}
      <!-- Bootstrap CSS -->
      <link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">
      <!-- Icones Fontello -->
      <link rel="stylesheet" href="{{asset('/css/fontello.css')}}">
    {% endblock %}

  </head>
  <body>
    <div class="container-fluid">
      <!-- BLOC DU SLIDER -->
      {% block slider %}
        <div class="row">
          <div class="col-md-12">
            <!-- Carousel -->
            <div class="carousel slide" id="carousel-6385">
              <ol class="carousel-indicators">
                <li data-slide-to="0" data-target="#carousel-6385" class="active"></li>
                <li data-slide-to="1" data-target="#carousel-6385"></li>
                <li data-slide-to="2" data-target="#carousel-6385"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" alt="Carousel Bootstrap First" src="{{asset('/img/slider1.jpg')}}"/>
                  <div class="carousel-caption">
                    <h4>
                      Openclass DUT
                    </h4>
                    <p>
                      Partageons nos savoirs
                    </p>
                  </div>
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" alt="Carousel Bootstrap Second" src="{{asset('/img/slider2.jpg')}}"/>
                  <div class="carousel-caption">
                    <h4>
                      Openclass DUT
                    </h4>
                    <p>
                      Partageons nos savoirs
                    </p>
                  </div>
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" alt="Carousel Bootstrap Third" src="{{asset('/img/slider3.jpg')}}"/>
                  <div class="carousel-caption">
                    <h4>
                      Openclass DUT
                    </h4>
                    <p>
                      Partageons nos savoirs
                    </p>
                  </div>
                </div>
              </div>
              <a class="carousel-control-prev" href="#carousel-6385" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="sr-only">Previous</span></a>
              <a class="carousel-control-next" href="#carousel-6385" data-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="sr-only">Next</span></a>
            </div>
          {% endblock %}

          <!-- BLOC DU MENU -->
          {% block menu %}
            <div class="row">
              <div class="col-md-12">
                <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="navbar-nav">
                      <li class="nav-item">
                        <a class="nav-link" href="{{path('openclassdut_accueil')}}">Nouveautés</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{path('openclassdut_ressources_semestre',{'semestre':1})}}">Semestre 1</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{path('openclassdut_ressources_semestre',{'semestre':2})}}">Semestre 2</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{path('openclassdut_ressources_semestre',{'semestre':3})}}">Semestre 3</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{path('openclassdut_ressources_semestre',{'semestre':4})}}">Semestre 4</a>
                      </li>
                    </ul>
                    <ul class="navbar-nav ml-md-auto">
                      <li class="nav-item active">
                        <a class="nav-link" href="#">
                          <i class="icon-user"></i>
                          Déconnexion
                          <span class="sr-only">(current)</span></a>
                      </li>
                    </ul>
                  </div>
                </nav>
              </div>
            </div>
          {% endblock %}

          <!-- BLOC CONTENU DE LA PAGE -->
          {% block contenu %}
            <div class="row" style="margin-top:15px;">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <h5>
                      {% block titrePage %}{% endblock %}
                    </h5>
                  </div>
                  <div class="card-body">
                    {% block contenuPage %}{% endblock %}
                  </div>
                </div>
              </div>
            </div>
          {% endblock %}

          <!-- PIED DE PAGE -->
          {% block footer %}
            <div class="row" style="margin-top:15px;">
              <div class="col-md-12">
                <p class="text-secondary">
                  Site réalisé avec les frameworks
                  <a href="https://symfony.com/">Symfony</a>
                  et
                  <a href="https://getbootstrap.com/">Bootstrap</a>.
                  Images libres de droit en provenance de
                  <a href="https://www.pexels.com/">pexels.com</a>
                  et
                  <a href="http://lorempixel.com/">lorempixel.com</a>.
                </p>
              </div>
            </div>
          </div>
        {% endblock %}

        <!-- BLOC JAVASCRIPT -->
        {% block javascripts %}
          <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
          <script src="{{asset('/js/bootstrap.min.js')}}"></script>
        {% endblock %}
      </div>
    </body>
  </html>
